template(name='key_item')
    // a.ui.inverted.segment.fly_right(href="/key/#{_id}" class=color) 
    .ui.inverted.segment.fly_right(class=color) 
        // .ui.inline.header #{address}
        // .ui.inline.header ##{key_number}
        img.ui.small.inline.image.rounded(src="{{c.url image_id height=300 crop='pad'}}")
        // .content
        .ui.inline.header 
            // i.key.icon
            |##{keytag_number}
        if building_letter 
            .ui.big.label(title='letter') #{building_letter}
        if key_residents
            .ui.large.label
                +i name='groups'
                each key_residents 
                    |#{username}
        // .ui.big.circular.label(class=color)
        //     |#{color}
        .ui.inline.header 
            |#{description}
        // +when
        // +user_info
        if checked_out
            .ui.label 
                |checked out
        else
            .ui.green.label 
                |checked in
        // if currentUser.admin_mode
        +bu         
        +author_info
        if currentUser.admin_mode
            +edit_button

template(name='key_view')
    with current_doc
        .ui.stackable.padded.three.column.grid
            .column
                a.ui.large.compact.button.fly_left(href="/keys")
                    i.large.left.chevron.icon
                    +i name='key'
                    |keys
                // +building_nav_button
                // +unit_nav_button
                .ui.inline.header
                    // i.home.icon 
                    +i name='key'
                    |key
                    |#{key_number}
                +image_view key='image_id' label='image'
                // +text_view key='address' label='address' icon='marker'
                +number_view key='unit_number' label='unit number' icon='room'
                +number_view key='building_number' label='building number' icon='apartment'
                if currentUser.admin_mode
                    .ui.big.label #{keytag_number}
                .ui.header #{color}
            .column
                if can_edit 
                    a.ui.large.compact.button(href="/key/#{_id}/edit")
                        i.large.pencil.icon
                        |edit
                +viewing_info
            .column
                +doc_residents
                +doc_owners
                +comments

            
            
template(name='building_nav_button')
    if building_number  
        with building_doc
            a.ui.big.button.fly_down(href="/building/#{_id}")
                i.large.left.chevron.icon
                +i name='building'
                |##{building_number}

template(name='unit_nav_button')
    if unit_number
        with unit_doc
            a.ui.big.button(href="/unit/#{_id}")
                i.large.left.chevron.icon
                +i name='room'
                |##{unit_number}

            
template(name='key_edit')         
    with current_doc
        .ui.padded.one.column.centered.grid
            .column
                a.ui.big.icon.green.button(href="/key/#{_id}")
                    i.checkmark.big.icon
                .ui.inline.header editing key
                div
                +number_edit key='keytag_number' label='key tag number' icon='key'
                div
                // +text_edit key='address' label='address' icon='marker'
                +number_edit key='unit_number' label='unit number' icon='cube'
                div
                +number_edit key='building_number' label='building number' icon='building'
                div
                +image_edit key='image_id' label='image'
                div
                +text_edit key='building_letter' label='building_letter' icon='building'
                div
                div
                +key_value_edit key='color' label='blue' value='blue' color='blue'
                +key_value_edit key='color' label='red' value='red' color='red'
                +key_value_edit key='color' label='green' value='green'  color='green'
                +key_value_edit key='color' label='orange' value='orange' color='orange'
                +key_value_edit key='color' label='black' value='black'  color='black'
                +key_value_edit key='color' label='yellow' value='yellow' color='yellow'
                +textarea_edit key='description' label='description' 
                if currentUser.admin_mode
                    +delete_button