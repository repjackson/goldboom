template(name='rentals')
    .ui.stackable.padded.grid
        .four.wide.column
            .ui.inline.header 
                +i name='garage'
                |rentals
            .ui.icon.compact.button.add_rental
                i.plus.large.icon
            .ui.icon.input 
                i.hashtag.icon
                input.search_rental_number(type='text' placeholder='number')
            .ui.icon.input 
                i.building.icon
                input.search_building_number(type='text' placeholder='building')
        .twelve.wide.column
            .ui.inline.header(title='result count') #{result_docs.count}
            +search_input key='address'
            +session_icon_button key='view_mode' value='grid' icon='th' 
            +session_icon_button key='view_mode' value='list' icon='list'
            
            +sort_direction_toggle
            // +sort_key_toggle
            +session_set key='sort_key' value='price' label='price' icon='money'
            // +session_set key='sort_key' value='' label='added' icon='clock'
            // +session_set key='sort_key' value='points' label='points' icon='hashtag'
            // +session_set key='sort_key' value='views' label='views' icon='eye'
            // +session_set key='sort_key' value='intFormedYear' label='year started' icon='calendar'
            // +session_set key='limit' value=10
            // +session_set key='limit' value=25
            // +session_set key='limit' value=100

            if subs_ready
                if session_is 'view_mode' 'grid'
                    if one_result
                        .ui.stackable.centered.one.cards
                            each rental_docs
                                +rental_card
                    else
                        .ui.stackable.centered.centered.cards
                            each rental_docs
                                +rental_card
                else
                    .ui.divided.selection.animated.list
                        each rental_docs
                            +rental_item
            
            
template(name='rental_card')
    a.ui.card.fly_right(href="/rental/#{_id}") 
        if image_id
            img.ui.image(src="{{c.url image_id }}")
        .content 
            .ui.inline.header #{address}
            // .ui.inline.header ##{rental_number}
            .ui.large.image.label
                +i name='building'
                |##{building_number}
            if rental_residents
                +i name='groups'
                each _residents 
                    +user_info
            if for_rent 
                .ui.basic.label
                    +i name='clock' 
                    |for rent
                    
template(name='rental_item')
    a.ui.item.fly_right(href="/rental/#{_id}") 
        if image_id
            img.ui.tiny.inline.image(src="{{c.url image_id }}")
        .ui.inline.header #{address}
        // .ui.inline.header ##{rental_number}
        .ui.large.image.label
            +i name='building'
            |##{building_number}
        if rental_residents
            .ui.large.label
                +i name='groups'
                each rental_residents 
                    |#{username}
                    // +user_info
        if for_rent 
            .ui.basic.label
                +i name='clock' 
                |for rent

template(name='rental_view')
    with current_doc
        .ui.stackable.padded.grid
            .eight.wide.column
                a.ui.large.compact.button.fly_left(href="/rentals")
                    i.large.left.chevron.icon
                    +i name='garage'
                    |rentals
                a.ui.large.compact.button(href="/building/#{building_number}")
                    i.large.left.chevron.icon
                    +i name='building'
                    |#{building_number}
                a.ui.large.compact.disabled.button(href="/building/#{building_number}/unit/#{unit_number}")
                    i.large.left.chevron.icon
                    +i name='room'
                    |unit #{unit_number}
                .ui.header
                    // i.home.icon 
                    +i name='garage'
                    small viewing
                    strong rental
                    |#{title}
                +image_view key='image_id' label='image'
                +image_view key='image_id2' label='image 2'
                +text_view key='address' label='address' icon='marker'
                +number_view key='unit_number' label='unit number' icon='room'
                +number_view key='building_number' label='building number' icon='apartment'
                +link_view key='link' label='link' icon='link' 
                +array_view key='location_tags' label='location tags'
                +array_view key='tags' label='tags' icon='tags'
                .ui.header 
                    |price: #{price}
            .eight.wide.column
                +rental_orders
                .ui.big.green.button
                    |rent
                if can_edit 
                    a.ui.large.compact.button(href="/rental/#{_id}/edit")
                        i.large.pencil.icon
                        |edit
                +viewing_info
                +rental_residents
                +rental_owners
                +comments

            
template(name='rental_orders')
    .ui.header 
        |rental orders
            
            
template(name='rental_edit')         
    with current_doc
        .ui.padded.two.column.centered.grid
            .column
                +text_edit key='title' label='title' icon='header'
                +image_edit key='image_id' label='image'
                +image_edit key='image_id2' label='image 2'
                +text_edit key='address' label='address' icon='marker'
                +number_edit key='unit_number' label='unit number' icon='room'
                +number_edit key='building_number' label='building number' icon='apartment'
                +link_edit key='link' label='link' icon='link' 
                +array_edit key='tags' label='tags' icon='tags'
            .column
                a.ui.big.fluid.green.button(href="/rental/#{_id}")
                    i.checkmark.big.icon
                    |save
                +html_edit key='description' label='description' 
                if currentUser.admin_mode
                    +delete_button
            
template(name='rental_permits')            
    .ui.segment
        .ui.header 
            +i name='badge'
            |rental Permits
        .ui.cards
            each permits
                .ui.card
                    .content
                        with resident 
                            +username_info
                        +date_view key='expiration_date' icon='calendar delete' 
                        +text_view key='permit' icon='badge' 
                        +text_view key='license_plate' icon='driver-license-card' 

template(name='rental_owners')            
    .ui.segment
        a.ui.header(href="/users")
            +i name='rent'
            // i.money.icon
            |rental owners
        .ui.four.cards
            each owners
                .ui.card
                    .image
                        img.ui.image(src="{{c.url image_id width=300 height=300 gravity='face' crop='fill'}}")
                    .content
                        a.header(href="/user/#{username}")
                             |#{first_name} #{last_name} 
                            .meta @#{username}
                            //- +array_view key='tags' label='Tags' 


