template(name='hiring_interest')
    .ui.fluid.accordion.alpha.rounded
        .title.zoomer
            .ui.header 
                +i name='money'
                |#{yes_answers.count}
                |hiring interest
                i.dropdown.icon
        .content
            .ui.small.header 
                i.checkmark.green.icon
                |yes
            .ui.list
                each yes_answers
                    .item #{name}
                        small #{username}
                        .ui.label
                            i.info.icon
                            |#{contact_info}
                        +bu
                        if currentUser.admin_mode
                            i.ban.icon.clear_answer
            .ui.small.header 
                i.ban.red.icon
                |no
            each no_answers
                .ui.label #{username}
                    if currentUser.admin_mode
                        i.ban.icon.clear_answer
