    a.item.toggle_rightbar.zoomer(href="/user/#{currentUser.username}/#{route}" class="{{isActiveRoute regex='user_dashboard'}}")
        +i name=icon cl='ui avatar image'
        // i.dashboard.icon
        |#{label}


